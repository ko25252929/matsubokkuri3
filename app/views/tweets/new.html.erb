<div class="contents row">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with(model: @tweet, local: true) do |form| %>
      <%= form.text_field :title, placeholder: "キャンプサイト名" %>
      <%= form.text_area :text, placeholder: "天候、芝の状態、風の強さをご記入下さい", rows: "10" %>
      <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>