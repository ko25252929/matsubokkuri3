<!DOCTYPE html>
<html>
  <head>
    <title>Matsubokkuri</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
   
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.css">
   <script src="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.min.js"></script>


    <script>
      $(document).ready(function(){
       $('.bxslider').bxSlider({
        auto: true
	    	touchEnabled: false
       });
      });
    </script>

  </head>

  <body>
  <header class="header">
      <div class="header__bar row">
        <h1 class="grid-6"><a href="/">Matsubokkuri</a></h1>
        <% if user_signed_in? %>
          <div class="user_nav grid-6">
           <span><%= current_user.nickname %>
            <ul class="user__info">
              <li>
                <%= link_to "マイページ", "/users/#{current_user.id}" %>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
              </li>
            </ul>
           </span>
            <%= link_to "投稿する", new_tweet_path, class: "post" %>
          </div>
        <% else %>
          <div class="grid-6">
            <%= link_to "ログイン", new_user_session_path, class: "post" %>
            <%= link_to "新規登録", new_user_registration_path, class: "post" %>
          </div>
        <% end %>
      </div>
      </header>

       <div class="bxslider">
        <div class="bxslider_slider"><img src="/assets/coffee1.jpg" title="" ></div>
        <div class="bxslider_slider"><img src="/assets/coffee2.jpg" title="" ></div>
        <div class="bxslider_slider"><img src="/assets/coffee3.jpg" title="" ></div>
       </div>
    <%= yield %>
    <footer>
      <p>
        Copyright Matsubokkuri 2021.
      </p>
    </footer>
  </body>
</html>
